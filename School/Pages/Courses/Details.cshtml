@page
@model School.Pages.Courses.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.CourseID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.CourseID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Department.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Course.Credits)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Course.Credits)
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Instructor</th>
                    <th>Office</th>
                </tr>
                @foreach (var item in Model.Course.CourseAssignments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Instructor.FullName)
                        </td>
                        <td>
                            @if (item.Instructor.OfficeAssignment == null)
                            {
                                @Html.DisplayFor(modelItem => item.Instructor.OfficeAssignment)
                            }

                            else
                            {
                                @Html.DisplayFor(modelItem => item.Instructor.OfficeAssignment.Location)
                            }
                        </td>
                    </tr>
                }
            </table>
        </dd>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Student Name</th>
                    <th>Grade</th>
                </tr>
                @foreach (var item in Model.Course.Enrollments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Student.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Grade)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Course.CourseID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
